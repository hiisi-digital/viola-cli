{
  "name": "@hiisi/viola-cli",
  "version": "0.3.0",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*_test.ts"
    ]
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/assert": "jsr:@std/assert@^1",
    "@hiisi/flash-freeze": "jsr:@hiisi/flash-freeze@^0.1",
    "@hiisi/viola": "jsr:@hiisi/viola@^0.3.0"
  },
  "lint": {
    "exclude": [
      "tests/fixtures/invalid-config/"
    ]
  },
  "fmt": {
    "exclude": [
      "tests/fixtures/invalid-config/"
    ]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "tasks": {
    "check": "deno check mod.ts",
    "run": "deno run -A mod.ts",
    "test": "deno test --allow-all"
  }
}
