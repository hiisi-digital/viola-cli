{
  "name": "@hiisi/viola-cli",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "src/**/*_test.ts"
    ]
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1",
    "@std/path": "jsr:@std/path@^1",
    "@hiisi/viola": "jsr:@hiisi/viola@^0.1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "tasks": {
    "check": "deno check mod.ts",
    "run": "deno run -A mod.ts"
  }
}
